generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id
  recipientId String
  content     String
  category    String
  readAt      DateTime? // ? -> pode ser nulo
  createdAt   DateTime  @default(now())

  @@index([recipientId])
}

